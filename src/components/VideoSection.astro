---
interface Props {
  title?: string;
  subtitle?: string;
  videoUrl?: string;
  videoTitle?: string;
}

const {
  title = 'Veja como a BrJoy AI funciona na prática',
  subtitle = 'Assista uma demonstração real do nosso agente de IA atendendo leads, qualificando clientes e agendando visitas automaticamente. Tudo isso integrado ao seu WhatsApp e CRM.',
  videoUrl = 'https://www.youtube.com/embed/dQw4w9WgXcQ',
  videoTitle = 'Demonstração BrJoy AI'
} = Astro.props;
---

<section class="video-section section-spacing" id="video-section">
    <div class="container">
        <h2 class="section-title text-center">{title}</h2>
        <p class="section-subtitle text-center">{subtitle}</p>

        <div class="video-container">
            <div class="video-wrapper">
                <iframe
                    src={videoUrl}
                    title={videoTitle}
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                    allowfullscreen
                ></iframe>
            </div>
        </div>
    </div>
</section>

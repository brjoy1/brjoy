---
import "../styles/components/integrations-marquee.css";

const integrations = [
    { name: "Kommo", icon: "dataset" },
    { name: "Vista", icon: "apartment" },
    { name: "Universal", icon: "public" },
    { name: "Salesforce", icon: "cloud" },
    { name: "RD Station", icon: "rocket_launch" },
    { name: "WhatsApp", icon: "chat" },
    { name: "Google Calendar", icon: "calendar_month" },
    { name: "Zapier", icon: "bolt" },
];
---

<section class="integrations-marquee-section">
    <div class="container">
        <p class="marquee-title">Integração Nativa com seu Ecossistema</p>

        <div class="marquee-container">
            <div class="marquee-track">
                {/* Original Set */}
                {
                    integrations.map((item) => (
                        <div class="marquee-item">
                            <span class="material-symbols-outlined">
                                {item.icon}
                            </span>
                            <span class="marquee-name">{item.name}</span>
                        </div>
                    ))
                }

                {/* Duplicate Set for Seamless Loop */}
                {
                    integrations.map((item) => (
                        <div class="marquee-item">
                            <span class="material-symbols-outlined">
                                {item.icon}
                            </span>
                            <span class="marquee-name">{item.name}</span>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

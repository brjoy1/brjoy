}

.feature-card h3 {
    font-size: 1.15rem;
    margin-bottom: 10px;
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.3;
}

.feature-card p {
    color: var(--color-text-secondary);
    line-height: 1.55;
    font-size: 0.9rem;
    margin: 0;
}

@media (max-width: 576px) {
    .feature-slider-wrapper {
        gap: 0;
    }

    .feature-nav {
        display: none;
    }

    .feature-slider-track {
        overflow-x: auto;
        gap: 16px;
        padding-bottom: 20px;
        padding-left: 20px;
        padding-right: 20px;
        margin-left: -20px;
        margin-right: -20px;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none;
    }

    .feature-slider-track::-webkit-scrollbar {
        display: none;
    }

    .feature-slider-track .feature-card {
        flex: 0 0 calc(100% - 80px);
        scroll-snap-align: center;
        padding: 36px 24px;
        min-height: 280px;

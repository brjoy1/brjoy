.slider-indicators {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 24px;
    padding: 0;
}

.slider-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(26, 115, 232, 0.2);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;

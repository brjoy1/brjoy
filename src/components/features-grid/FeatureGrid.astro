/* Integrated CTA Styles */
.feature-cta {
    margin-top: 60px;
    max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
}

@media (max-width: 968px) {
    .feature-cta {
        margin-top: 48px;
    }

---
interface Feature {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  title: string;
  subtitle: string;
  features: Feature[];
  sectionId?: string;
  backgroundColor?: 'white' | 'gray';
  className?: string;
}

const {
  title,
  subtitle,
  features,
  sectionId = '',
  backgroundColor = 'white',
  className = ''
} = Astro.props;

// Generate unique slider ID based on section or title
const sliderId = sectionId || title.toLowerCase().replace(/\s+/g, '-');
---

<section class={`section-spacing feature-section ${backgroundColor === 'gray' ? 'bg-gray' : ''} ${className}`} id={sectionId}>
    <div class="container">
        <div class="text-center">
            <h2 class="section-title">{title}</h2>
            <p class="section-subtitle">{subtitle}</p>
        </div>

        <div class="feature-grid">
            <div class="grid-3" data-slider={sliderId}>
                {features.map(feature => (
                    <div class="feature-card">
                        <span class="material-symbols-outlined">{feature.icon}</span>
                        <h3>{feature.title}</h3>
                        <p>{feature.description}</p>
                    </div>
                ))}
            </div>
            <div class="slider-indicators" id={`slider-indicators-${sliderId}`}></div>
        </div>
    </div>
</section>

<style>
.feature-section.bg-gray {
    background-color: #F8F9FA;
}

@media (min-width: 768px) {
    .feature-section {
        padding-left: 60px;
        padding-right: 60px;
    }
}

.feature-grid {
    margin-top: 32px;
}

.feature-grid .grid-3 {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
}

.feature-card {
    text-align: center;
    padding: 32px;
    background: #FFFFFF;
    border-radius: 16px;
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
}

.feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
}

.feature-card .material-symbols-outlined {
    font-size: 3rem;
    color: var(--color-primary);
    margin-bottom: 16px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 72px;
    height: 72px;
    background: linear-gradient(135deg, rgba(26, 115, 232, 0.1) 0%, rgba(26, 115, 232, 0.05) 100%);
    border-radius: 16px;
}

/* Seção de Dor - Ícones Vermelhos */
.feature-section.dor .feature-card .material-symbols-outlined {
    color: #dc2626;
    background: linear-gradient(135deg, rgba(220, 38, 38, 0.1) 0%, rgba(220, 38, 38, 0.05) 100%);
}

.feature-section.dor .feature-card:hover .material-symbols-outlined {
    color: #b91c1c;
}

/* Seção de Solução - Ícones Verdes */
.feature-section.solucao .feature-card .material-symbols-outlined {
    color: #16a34a;
    background: linear-gradient(135deg, rgba(22, 163, 74, 0.1) 0%, rgba(22, 163, 74, 0.05) 100%);
}

.feature-section.solucao .feature-card:hover .material-symbols-outlined {
    color: #15803d;
}

.feature-card h3 {
    font-size: 1.25rem;
    margin-bottom: 12px;
    font-weight: 600;
    color: var(--color-text);
}

.feature-card p {
    color: var(--color-text-secondary);
    line-height: 1.6;
    font-size: 0.95rem;
}

@media (max-width: 768px) {
    .feature-grid .grid-3 {
        display: flex;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        gap: 16px;
        padding-bottom: 20px;
        padding-left: 20px;
        padding-right: 20px;
        margin-left: -20px;
        margin-right: -20px;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none;
    }

    .feature-grid .grid-3::-webkit-scrollbar {
        display: none;
    }

    .feature-grid .feature-card {
        flex: 0 0 calc(100% - 80px);
        scroll-snap-align: center;
        padding: 36px 24px;
        min-height: 280px;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    }

    .feature-card .material-symbols-outlined {
        font-size: 3.5rem;
        width: 80px;
        height: 80px;
        margin-bottom: 20px;
        margin-left: auto;
        margin-right: auto;
    }

    .feature-card h3 {
        font-size: 1.375rem;
        margin-bottom: 14px;
        font-weight: 700;
    }

    .feature-card p {
        font-size: 1rem;
        line-height: 1.65;
    }
}

@media (max-width: 480px) {
    .feature-grid .grid-3 {
        padding-left: 16px;
        padding-right: 16px;
        margin-left: -16px;
        margin-right: -16px;
    }

    .feature-grid .feature-card {
        flex: 0 0 calc(100% - 60px);
        padding: 32px 20px;
        min-height: 260px;
    }

    .feature-card .material-symbols-outlined {
        font-size: 3.25rem;
        width: 76px;
        height: 76px;
        margin-bottom: 18px;
    }

    .feature-card h3 {
        font-size: 1.25rem;
        margin-bottom: 12px;
    }

    .feature-card p {
        font-size: 0.9375rem;
        line-height: 1.6;
    }
}
</style>

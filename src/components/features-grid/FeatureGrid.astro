---
interface Feature {
  icon: string;
  title: string;
  description: string;
}

interface CTAProps {
  title: string;
  subtitle?: string;
  primaryButton: {
    text: string;
    href: string;
    icon?: string;
  };
  secondaryButton?: {
    text: string;
    href: string;
    icon?: string;
  };
  variant?: 'default' | 'urgent' | 'success';
  backgroundColor?: 'white' | 'gray' | 'gradient';
}

interface Props {
  title: string;
  subtitle: string;
  features: Feature[];
  sectionId?: string;
  backgroundColor?: 'white' | 'gray';
  className?: string;
  autoplay?: boolean;
  autoplayDelay?: number;
  cta?: CTAProps;
}

const {
  title,
  subtitle,
  features,
  sectionId = '',
  backgroundColor = 'white',
  className = '',
  autoplay = false,
  autoplayDelay = 5000,
  cta
} = Astro.props;

// Generate unique slider ID based on section or title
const sliderId = sectionId || title.toLowerCase().replace(/\s+/g, '-');
---

<section class={`section-spacing feature-section ${backgroundColor === 'gray' ? 'bg-gray' : ''} ${className}`} id={sectionId}>
    <div class="container">
        <div class="text-center">
            <h2 class="section-title">{title}</h2>
            <p class="section-subtitle">{subtitle}</p>
        </div>

        <div class="feature-grid">
            <div class="feature-slider-wrapper">
                <button class="feature-nav feature-nav-prev" aria-label="Anterior">
                    <span class="material-symbols-outlined">chevron_left</span>
                </button>

                <div
                    class="grid-3 feature-slider-track"
                    data-slider={sliderId}
                    data-slider-autoplay={autoplay.toString()}
                    data-slider-delay={autoplayDelay.toString()}
                >
                    {features.map(feature => (
                        <div class="feature-card">
                            <span class="material-symbols-outlined">{feature.icon}</span>
                            <h3>{feature.title}</h3>
                            <p>{feature.description}</p>
                        </div>
                    ))}
                </div>

                <button class="feature-nav feature-nav-next" aria-label="Próximo">
                    <span class="material-symbols-outlined">chevron_right</span>
                </button>
            </div>
            <div class="slider-indicators" id={`slider-indicators-${sliderId}`}></div>
        </div>

        {cta && (
            <div class="feature-cta">
                <div class="cta-inline__wrapper">
                    {cta.variant === 'urgent' && (
                        <div class="cta-badge cta-badge--urgent">
                            <span class="material-symbols-outlined">schedule</span>
                            Vagas Limitadas
                        </div>
                    )}
                    {cta.variant === 'success' && (
                        <div class="cta-badge cta-badge--success">
                            <span class="material-symbols-outlined">verified</span>
                            Recomendado
                        </div>
                    )}

                    <div class={`cta-inline__content cta-inline--${cta.variant || 'default'}`}>
                        <div class="cta-inline__text">
                            <h2 class="cta-inline__title">{cta.title}</h2>
                            {cta.subtitle && <p class="cta-inline__subtitle">{cta.subtitle}</p>}
                        </div>

                        <div class="cta-inline__actions">
                            <a href={cta.primaryButton.href} class="cta-btn cta-btn--primary" target="_blank" rel="noopener noreferrer">
                                {cta.primaryButton.icon && <span class="material-symbols-outlined">{cta.primaryButton.icon}</span>}
                                <span class="cta-btn__text">{cta.primaryButton.text}</span>
                                <span class="cta-btn__arrow material-symbols-outlined">arrow_forward</span>
                            </a>
                            {cta.secondaryButton && (
                                <a href={cta.secondaryButton.href} class="cta-btn cta-btn--secondary">
                                    {cta.secondaryButton.icon && <span class="material-symbols-outlined">{cta.secondaryButton.icon}</span>}
                                    <span class="cta-btn__text">{cta.secondaryButton.text}</span>
                                </a>
                            )}
                        </div>
                    </div>
                </div>
            </div>
        )}
    </div>
</section>

<style>
.feature-section.bg-gray {
    background-color: #F8F9FA;
}

@media (min-width: 768px) {
    .feature-section {
        padding-left: 60px;
        padding-right: 60px;
    }
}

.feature-grid {
    margin-top: 32px;
}

/* Slider Wrapper for Desktop */
.feature-slider-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    gap: 32px;
    margin: 0 -60px;
    padding: 0 60px;
}

/* Navigation Buttons */
.feature-nav {
    flex-shrink: 0;
    width: 52px;
    height: 52px;
    border-radius: 50%;
    background: white;
    border: 2px solid rgba(26, 115, 232, 0.15);
    color: var(--color-primary);
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    display: flex;
    align-items: center;
    justify-content: center;
}

.feature-nav:hover:not([disabled]) {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
    box-shadow: 0 4px 16px rgba(26, 115, 232, 0.25);
    transform: scale(1.05);
}

.feature-nav:active:not([disabled]) {
    transform: scale(0.98);
}

.feature-nav[disabled] {
    opacity: 0.3;
    cursor: not-allowed;
}

.feature-nav .material-symbols-outlined {
    font-size: 30px;
}

/* Slider Track */
.feature-slider-track {
    display: flex;
    overflow-x: hidden;
    overflow-y: visible;
    scroll-behavior: smooth;
    gap: 20px;
    width: 100%;
    scroll-snap-type: x mandatory;
    padding: 8px 4px;
}

.feature-slider-track .feature-card {
    flex: 0 0 300px;
    scroll-snap-align: start;
    max-width: 320px;
}

@media (min-width: 1400px) {
    .feature-slider-track .feature-card {
        flex: 0 0 340px;
        max-width: 360px;
    }
}

@media (min-width: 1024px) and (max-width: 1399px) {
    .feature-slider-track .feature-card {
        flex: 0 0 300px;
        max-width: 320px;
    }
}

@media (min-width: 769px) and (max-width: 1023px) {
    .feature-slider-track .feature-card {
        flex: 0 0 280px;
        max-width: 300px;
    }

    .feature-slider-wrapper {
        gap: 24px;
        margin: 0 -40px;
        padding: 0 40px;
    }
}

@media (min-width: 577px) and (max-width: 768px) {
    .feature-slider-track .feature-card {
        flex: 0 0 calc(50% - 12px);
    }

    .feature-slider-wrapper {
        gap: 20px;
        margin: 0 -30px;
        padding: 0 30px;
    }

    .feature-nav {
        width: 44px;
        height: 44px;
    }

    .feature-nav .material-symbols-outlined {

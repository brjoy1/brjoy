    text-align: center;
    padding: 28px 24px;
    background: #FFFFFF;
    border-radius: 20px;
    border: 1px solid rgba(0, 0, 0, 0.06);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
    min-height: 280px;
}

.feature-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
    border-color: rgba(26, 115, 232, 0.2);
}

.feature-card .material-symbols-outlined {
    font-size: 2.75rem;
    color: var(--color-primary);
    margin-bottom: 20px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 68px;
    height: 68px;
    background: linear-gradient(135deg, rgba(26, 115, 232, 0.12) 0%, rgba(26, 115, 232, 0.06) 100%);
    border-radius: 18px;
    transition: all 0.3s ease;
}

.feature-card:hover .material-symbols-outlined {
    transform: scale(1.08);
    background: linear-gradient(135deg, rgba(26, 115, 232, 0.18) 0%, rgba(26, 115, 232, 0.1) 100%);
}

/* Seção de Dor - Ícones Vermelhos */
.feature-section.dor .feature-card .material-symbols-outlined {
    color: #dc2626;
    background: linear-gradient(135deg, rgba(220, 38, 38, 0.1) 0%, rgba(220, 38, 38, 0.05) 100%);
}

.feature-section.dor .feature-card:hover .material-symbols-outlined {
    color: #b91c1c;
}

/* Seção de Solução - Ícones Verdes */

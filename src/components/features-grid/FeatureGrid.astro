        padding-left: 16px;
        padding-right: 16px;
        margin-left: -16px;
        margin-right: -16px;
    }

    .feature-slider-track .feature-card {
        flex: 0 0 calc(100% - 60px);
        padding: 32px 20px;
        min-height: 260px;
    }

    .feature-card .material-symbols-outlined {
        font-size: 3.25rem;
        width: 76px;
        height: 76px;
        margin-bottom: 18px;
    }

    .feature-card h3 {
        font-size: 1.25rem;
        margin-bottom: 12px;
    }

    .feature-card p {
        font-size: 0.9375rem;
        line-height: 1.6;
    }

@media (max-width: 968px) {
    .cta-inline__content {
        flex-direction: column;
        text-align: center;
        padding: 36px 32px;
        gap: 28px;
    }

    .cta-badge {
        top: -12px;
        right: 50%;
        transform: translateX(50%);
    }

    .cta-inline__actions {
        width: 100%;
        flex-direction: column;
    }

    .cta-btn {

.cta-inline__wrapper {
    position: relative;
    margin-top: 16px;
}

.cta-inline__content {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 48px;
    padding: 40px 48px;
    background: #FFFFFF;
    border-radius: 20px;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.06);
    border: 2px solid transparent;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
}

.cta-inline__content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #1A73E8 0%, #4285F4 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.cta-inline__content:hover::before {
    opacity: 1;
}

.cta-inline__content:hover {
    border-color: rgba(26, 115, 232, 0.15);
    box-shadow: 0 8px 32px rgba(26, 115, 232, 0.1);
    transform: translateY(-4px);
}

.cta-inline--urgent .cta-inline__content,
.cta-inline__content.cta-inline--urgent {
    border-color: rgba(234, 67, 53, 0.2);
    background: linear-gradient(135deg, #FFF5F5 0%, #FFFFFF 100%);
}

.cta-inline--urgent .cta-inline__content::before,
.cta-inline__content.cta-inline--urgent::before {
    background: linear-gradient(90deg, #EA4335 0%, #D33426 100%);
    opacity: 1;

---
import SolutionCard from "./SolutionCard.astro";

interface Solution {
    icon: string;
    title: string;
    description: string;
    href?: string;
    comingSoon?: boolean;
}

interface Props {
    title: string;
    subtitle: string;
    solutions: Solution[];
    sectionId?: string;
}

const { title, subtitle, solutions, sectionId = "solucoes" } = Astro.props;
---

<section class="solutions section-spacing" id={sectionId}>
    <div class="container">
        <h2 class="section-title text-center">{title}</h2>
        <p class="section-subtitle text-center">{subtitle}</p>

        <div
            class="solutions-grid"
            data-slider="solutions-mobile"
            data-slider-item=".solution-card"
        >
            {
                solutions.map((solution) => (
                    <SolutionCard
                        icon={solution.icon}
                        title={solution.title}
                        description={solution.description}
                        href={solution.href}
                        comingSoon={!solution.href}
                    />
                ))
            }
        </div>

        <div id="slider-indicators-solutions-mobile" class="slider-indicators">
        </div>
    </div>
</section>

<script>
    import { initDataSliders } from "../../scripts/slider";

    // Initialize sliders when DOM is ready
    document.addEventListener("DOMContentLoaded", () => {
        initDataSliders();
    });
</script>

<style>
    @import "../../styles/home.css";

    .solutions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 32px;
        margin-top: 48px;
    }

    .slider-indicators {
        display: none;
        justify-content: center;
        gap: 8px;
        margin-top: 32px;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .solutions-grid {
            display: flex;
            overflow-x: auto;
            scroll-snap-type: x mandatory;
            gap: 16px;
            margin-top: 32px;
            padding-bottom: 24px; /* Space for scrollbar/touch */
            scrollbar-width: none; /* Firefox */
            -ms-overflow-style: none; /* IE/Edge */
        }

        .solutions-grid::-webkit-scrollbar {
            display: none;
        }

        /* Target the solution card component wrapper if necessary, 
           but since SolutionCard renders the element directly, 
           we target the class it has. */
        :global(.solution-card) {
            flex: 0 0 85%;
            scroll-snap-align: center;
        }

        .slider-indicators {
            display: flex;
        }

        :global(.slider-dot) {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background-color: #e0e0e0;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        :global(.slider-dot.active) {
            background-color: var(--color-primary);
            width: 24px;
            border-radius: 4px;
        }
    }

    @media (max-width: 576px) {
        /* Styles already covered by max-width: 768px for slider behavior */
    }
</style>

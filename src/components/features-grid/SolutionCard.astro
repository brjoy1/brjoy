---
interface Props {
    icon: string;
    title: string;
    description: string;
    href?: string;
    comingSoon?: boolean;
}

const { icon, title, description, href, comingSoon } = Astro.props;
---

{
    href ? (
        <a
            href={href}
            class="solution-card"
            aria-label={`Saiba mais sobre ${title}`}
        >
            <div class="solution-icon">
                <span class="material-symbols-outlined">{icon}</span>
            </div>
            <h3 class="solution-title">{title}</h3>
            <p class="solution-description">{description}</p>
            <div class="solution-cta">
                <span>Conhecer solução</span>
                <span class="material-symbols-outlined">arrow_forward</span>
            </div>
        </a>
    ) : (
        <div class={`solution-card ${comingSoon ? "coming-soon" : ""}`}>
            <div class="solution-icon">
                <span class="material-symbols-outlined">{icon}</span>
            </div>
            <h3 class="solution-title">{title}</h3>
            <p class="solution-description">{description}</p>
            {comingSoon && <div class="solution-badge">Em breve</div>}
        </div>
    )
}

<style>
    .solution-card {
        display: block;
        text-decoration: none;
        position: relative;
        padding: 32px 24px;
        background: #ffffff;
        border-radius: 16px;
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        height: 100%;
    }

    .solution-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    }

    .solution-card.coming-soon {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .solution-card.coming-soon:hover {
        transform: none;
        box-shadow: none;
    }

    .solution-icon {
        text-align: center;
        margin-bottom: 16px;
    }

    .solution-icon .material-symbols-outlined {
        font-size: 3rem;
        color: var(--color-primary);
    }

    .solution-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 12px;
        color: var(--color-text);
        line-height: 1.2;
    }

    .solution-description {
        color: var(--color-text-secondary);
        line-height: 1.6;
        margin-bottom: 16px;
    }

    .solution-cta {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: auto;
        padding-top: 16px;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
        color: var(--color-primary);
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .solution-card:hover .solution-cta {
        color: var(--color-primary-dark, var(--color-primary));
    }

    .solution-cta .material-symbols-outlined {
        transition: transform 0.3s ease;
    }

    .solution-card:hover .solution-cta .material-symbols-outlined {
        transform: translateX(4px);
    }

    .solution-badge {
        position: absolute;
        top: 16px;
        right: 16px;
        background: #ffc107;
        color: #000;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .solution-card {
            padding: 24px;
        }

        .solution-icon .material-symbols-outlined {
            font-size: 2.5rem;
        }

        .solution-title {
            font-size: 1.1rem;
        }

        .solution-description {
            font-size: 0.95rem;
            margin-bottom: 12px;
        }
    }
</style>

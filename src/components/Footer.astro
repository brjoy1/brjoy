---
// Footer estilo Google Antigravity
import '../styles/components/footer.css';
---

<footer class="site-footer" role="contentinfo">
    <div class="footer-main">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-brand">
                    <a href="/" class="footer-logo" aria-label="BrJoy - Página inicial">
                        <img src="/images/logo_header.webp" alt="BRJOY AI" class="footer-logo-image">
                    </a>
                    <p class="footer-tagline">Experience liftoff</p>
                </div>

                <div class="footer-column">
                    <h3 class="footer-heading">Produto</h3>
                    <nav class="footer-links" aria-label="Links de produto">
                        <a href="/#solucoes">Download</a>
                        <a href="/imobiliaria">Produto</a>
                        <a href="#" aria-label="Documentação (em breve)">Docs</a>
                        <a href="#" aria-label="Changelog (em breve)">Changelog</a>
                    </nav>
                </div>

                <div class="footer-column">
                    <h3 class="footer-heading">Recursos</h3>
                    <nav class="footer-links" aria-label="Links de recursos">
                        <a href="#" aria-label="Blog (em breve)">Blog</a>
                        <a href="#" aria-label="Preços (em breve)">Pricing</a>
                        <a href="#" aria-label="Casos de uso (em breve)">Use Cases</a>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <div class="container">
            <div class="footer-bottom-content">
                <div class="footer-company">
                    <img src="/images/logo_header.webp" alt="BRJOY AI" class="footer-logo-small">
                </div>
                <nav class="footer-legal" aria-label="Links legais">
                    <a href="#" aria-label="Sobre BrJoy (em breve)">Sobre BrJoy</a>
                    <a href="#" aria-label="Produtos BrJoy (em breve)">Produtos BrJoy</a>
                    <a href="#" aria-label="Política de privacidade (em breve)">Privacidade</a>
                    <a href="#" aria-label="Termos de uso (em breve)">Termos</a>
                </nav>
            </div>
        </div>
    </div>
</footer>

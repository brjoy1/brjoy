---
// Footer estilo Google Antigravity
import "../styles/components/footer.css";
---

<footer class="site-footer" role="contentinfo">
    <div class="footer-main">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-brand">
                    <a
                        href="/"
                        class="footer-logo"
                        aria-label="BrJoy - Página inicial"
                    >
                        <img
                            src="/images/logo_header.webp"
                            alt="BRJOY AI"
                            class="footer-logo-image"
                            width="160"
                            height="48"
                        />
                    </a>
                    <p class="footer-tagline">
                        Inteligência Artificial para Seu Negócio
                    </p>
                    <div class="footer-company-info">
                        <p>Brjoy Tecnologia LTDA.</p>
                        <p>CNPJ: 41.515.426/0001-65</p>
                        <p>São Paulo - SP</p>
                    </div>
                </div>

                <div class="footer-column">
                    <h3 class="footer-heading">Soluções</h3>
                    <nav class="footer-links" aria-label="Links de soluções">
                        <a href="/imobiliaria">Imobiliárias</a>
                        <a href="/#solucoes">Prestadores de Serviços</a>
                        <a href="/#solucoes">Clínicas e Saúde</a>
                    </nav>
                </div>

                <div class="footer-column">
                    <h3 class="footer-heading">Empresa</h3>
                    <nav class="footer-links" aria-label="Links da empresa">
                        <a href="mailto:contato@brjoy.com.br">Fale Conosco</a>
                        <a href="/#solucoes">Nossos Planos</a>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-bottom">
        <div class="container">
            <div class="footer-bottom-content">
                <div class="footer-copyright">
                    &copy; {new Date().getFullYear()} BrJoy AI. Todos os direitos
                    reservados.
                </div>
                <nav class="footer-legal" aria-label="Links legais">
                    <a href="#">Privacidade</a>
                    <a href="#">Termos de Uso</a>
                </nav>
            </div>
        </div>
    </div>
</footer>

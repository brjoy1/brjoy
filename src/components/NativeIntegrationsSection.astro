---
import "../styles/components/native-integrations.css";
import BrandIcon from "./BrandIcon.astro";

interface Integration {
    name: string;
    description: string;
    brand:
        | "google-calendar"
        | "google-sheets"
        | "openai"
        | "whatsapp"
        | "facebook"
        | "instagram"
        | "google-ads"
        | "api"
        | "kommo";
    category: string;
    color: string;
}

const integrations: Integration[] = [
    {
        name: "Google Calendar",
        description: "Sincronize agendamentos automaticamente",
        brand: "google-calendar",
        category: "Agenda",
        color: "#4285F4",
    },
    {
        name: "Planilhas Google",
        description: "Exporte e gerencie dados em planilhas",
        brand: "google-sheets",
        category: "Sheets",
        color: "#34A853",
    },
    {
        name: "OpenAI",
        description: "Inteligência artificial avançada",
        brand: "openai",
        category: "Inteligência Artificial",
        color: "#412991",
    },
    {
        name: "Kommo",
        description: "Integração completa com seu CRM",
        brand: "kommo",
        category: "CRM",
        color: "#FF6B00",
    },
    {
        name: "WhatsApp",
        description: "Atendimento via WhatsApp Business",
        brand: "whatsapp",
        category: "Mensageria",
        color: "#25D366",
    },
    {
        name: "Facebook",
        description: "Integre com Facebook Messenger",
        brand: "facebook",
        category: "Social",
        color: "#0866FF",
    },
    {
        name: "Instagram",
        description: "Atenda clientes via Instagram Direct",
        brand: "instagram",
        category: "Social",
        color: "#E4405F",
    },
    {
        name: "Google Ads",
        description: "Rastreie conversões e otimize campanhas",
        brand: "google-ads",
        category: "Marketing",
        color: "#4285F4",
    },
    {
        name: "API",
        description: "Conecte qualquer sistema via API",
        brand: "api",
        category: "Conexões personalizadas",
        color: "#6C757D",
    },
];
---

<section class="section-spacing native-integrations-section">
    <div class="container section-container">
        <!-- Header -->
        <div class="section-header text-center">
            <h2 class="section-title">INTEGRAÇÃO NATIVA COM SEU ECOSSISTEMA</h2>
        </div>

        <!-- Marquee Slider -->
        <div class="marquee-container">
            <div class="marquee-content">
                {
                    [...integrations, ...integrations].map((integration) => (
                        <div
                            class="integration-item"
                            style={`--brand-color: ${integration.color}`}
                        >
                            <BrandIcon
                                brand={integration.brand}
                                size={24}
                                className="integration-icon"
                            />
                            <span class="integration-name">
                                {integration.name}
                            </span>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

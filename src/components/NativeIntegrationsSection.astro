---

<section class="section-spacing native-integrations-section">
    <div class="container section-container">
        <!-- Header -->
        <div class="section-header text-center">
            <h2 class="section-title">INTEGRAÇÃO NATIVA COM SEU ECOSSISTEMA</h2>
        </div>

        <!-- Marquee Slider -->
        <div class="marquee-container">
            <div class="marquee-content">
                {
                    [...integrations, ...integrations].map((integration) => (
                        <div class="integration-item">
                            <span class="material-symbols-outlined integration-icon">
                                {integration.icon}
                            </span>
                            <span class="integration-name">
                                {integration.name}
                            </span>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

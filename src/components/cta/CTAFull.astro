---
interface Props {
  title: string;
  description: string;
  primaryButton: {
    text: string;
    href: string;
    icon?: string;
  };
  secondaryButton?: {
    text: string;
    href: string;
    icon?: string;
  };
  variant?: 'primary' | 'gradient' | 'dark';
  sectionId?: string;
  className?: string;
}

const {
  title,
  description,
  primaryButton,
  secondaryButton,
  variant = 'primary',
  sectionId = 'cta',
  className = ''
} = Astro.props;
---

<section class={`cta cta-${variant} section-spacing ${className}`} id={sectionId}>
    <div class="cta-background">
        <div class="gradient-orb orb-1"></div>
        <div class="gradient-orb orb-2"></div>
        <div class="gradient-orb orb-3"></div>
    </div>

    <div class="container">
        <div class="glass-card">
            <div class="cta-content">
                <div class="cta-text">
                    <h2 class="cta-title">{title}</h2>
                    <p class="cta-description">{description}</p>
                </div>

                <div class="cta-buttons">
                    <a href={primaryButton.href} class="btn btn-primary btn-large">
                        {primaryButton.icon && (
                            <span class="material-symbols-outlined">{primaryButton.icon}</span>
                        )}
                        {primaryButton.text}
                    </a>

                    {secondaryButton && (
                        <a href={secondaryButton.href} class="btn btn-secondary btn-large">
                            {secondaryButton.icon && (
                                <span class="material-symbols-outlined">{secondaryButton.icon}</span>
                            )}
                            {secondaryButton.text}
                        </a>
                    )}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.cta {
    position: relative;
    overflow: hidden;
    min-height: 400px;
    display: flex;
    align-items: center;
}

.cta-primary {
    background: linear-gradient(135deg, #1A73E8 0%, #34A853 100%);
}

.cta-gradient {
    background: linear-gradient(135deg, #34A853 0%, #1A73E8 100%);
}

.cta-dark {
    background: linear-gradient(135deg, #0D47A1 0%, #1565C0 100%);
}

/* Background animado com orbs */
.cta-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
    z-index: 0;
}

.gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.5;
    animation: float 20s infinite ease-in-out;
}

.orb-1 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(26, 115, 232, 0.4) 0%, transparent 70%);
    top: -200px;
    left: -100px;
    animation-delay: 0s;
}

.orb-2 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(52, 168, 83, 0.4) 0%, transparent 70%);
    bottom: -150px;
    right: -50px;
    animation-delay: 7s;
}

.orb-3 {
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, rgba(26, 115, 232, 0.3) 0%, transparent 70%);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: 14s;
}

@keyframes float {
    0%, 100% {
        transform: translate(0, 0) scale(1);
    }
    33% {
        transform: translate(30px, -30px) scale(1.1);
    }
    66% {
        transform: translate(-20px, 20px) scale(0.9);
    }
}

/* Glass card */
.glass-card {
    position: relative;
    z-index: 1;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-radius: 100px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 60px 48px;
    box-shadow:
        0 8px 32px rgba(0, 0, 0, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
}

.cta-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 48px;
}

.cta-text {
    flex: 1;
    max-width: 600px;
}

.cta-title {
    font-size: 2.75rem;
    font-weight: 700;
    margin-bottom: 16px;
    line-height: 1.2;
    color: #FFFFFF;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
}

.cta-description {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.95);
    line-height: 1.6;
    text-shadow: 0 1px 10px rgba(0, 0, 0, 0.1);
}

.cta-buttons {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 32px;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 100px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
    white-space: nowrap;
    position: relative;
    overflow: hidden;
}

.btn-large {
    padding: 18px 44px;
    font-size: 1.125rem;
}

.btn-primary {
    background: rgba(255, 255, 255, 0.95);
    color: #1A73E8;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
}

.btn-primary:hover {
    background: #FFFFFF;
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
}

.btn-secondary {
    background: rgba(255, 255, 255, 0.15);
    color: #FFFFFF;
    border: 2px solid rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
}

.btn-secondary:hover {
    background: rgba(255, 255, 255, 0.25);
    border-color: rgba(255, 255, 255, 0.6);
    transform: translateY(-3px);
}

.btn .material-symbols-outlined {
    font-size: 1.25rem;
}

/* Shimmer effect */
.btn-primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: left 0.5s;
}

.btn-primary:hover::before {
    left: 100%;
}

/* Responsividade */
@media (max-width: 992px) {
    .cta-content {
        flex-direction: column;
        text-align: center;
        gap: 40px;
    }

    .cta-text {
        max-width: 100%;
    }

    .cta-title {
        font-size: 2.25rem;
    }

    .cta-description {
        font-size: 1.125rem;
    }

    .cta-buttons {
        justify-content: center;
        width: 100%;
    }

    .glass-card {
        padding: 48px 32px;
    }

    .gradient-orb {
        filter: blur(60px);
    }
}

@media (max-width: 576px) {
    .cta-title {
        font-size: 1.875rem;
    }

    .cta-description {
        font-size: 1rem;
    }

    .cta-buttons {
        flex-direction: column;
        width: 100%;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    .btn-large {
        padding: 16px 32px;
        font-size: 1rem;
    }

    .glass-card {
        padding: 36px 24px;
        border-radius: 100px;
    }

    .orb-1,
    .orb-2,
    .orb-3 {
        filter: blur(50px);
    }
}
</style>

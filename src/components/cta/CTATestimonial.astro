---
interface Props {
  title: string;
  quote: string;
  author: {
    name: string;
    role: string;
    company?: string;
    avatar?: string;
  };
  primaryButton: {
    text: string;
    href: string;
    icon?: string;
  };
  secondaryButton?: {
    text: string;
    href: string;
    icon?: string;
  };
  rating?: number;
  variant?: 'light' | 'primary';
  sectionId?: string;
  className?: string;
}

const {
  title,
  quote,
  author,
  primaryButton,
  secondaryButton,
  rating,
  variant = 'light',
  sectionId = 'cta-testimonial',
  className = ''
} = Astro.props;
---

<section class={`cta-testimonial cta-testimonial-${variant} ${className}`} id={sectionId}>
    <div class="container">
        <h2 class="cta-testimonial-title">{title}</h2>

        <div class="testimonial-card">
            <div class="quote-icon">
                <span class="material-symbols-outlined">format_quote</span>
            </div>

            {rating && (
                <div class="testimonial-rating">
                    {Array.from({ length: 5 }).map((_, i) => (
                        <span class="material-symbols-outlined star" data-filled={i < rating}>
                            {i < rating ? 'star' : 'star_outline'}
                        </span>
                    ))}
                </div>
            )}

            <blockquote class="testimonial-quote">
                "{quote}"
            </blockquote>

            <div class="testimonial-author">
                {author.avatar && (
                    <img src={author.avatar} alt={author.name} class="author-avatar" />
                )}
                {!author.avatar && (
                    <div class="author-avatar-placeholder">
                        <span class="material-symbols-outlined">person</span>
                    </div>
                )}
                <div class="author-info">
                    <div class="author-name">{author.name}</div>
                    <div class="author-role">
                        {author.role}{author.company ? ` â€¢ ${author.company}` : ''}
                    </div>
                </div>
            </div>
        </div>

        <div class="cta-testimonial-actions">
            <a href={primaryButton.href} class="btn-testimonial btn-testimonial-primary">
                {primaryButton.icon && (
                    <span class="material-symbols-outlined">{primaryButton.icon}</span>
                )}
                {primaryButton.text}
            </a>

            {secondaryButton && (
                <a href={secondaryButton.href} class="btn-testimonial btn-testimonial-secondary">
                    {secondaryButton.icon && (
                        <span class="material-symbols-outlined">{secondaryButton.icon}</span>
                    )}
                    {secondaryButton.text}
                </a>
            )}
        </div>
    </div>
</section>

<style>
.cta-testimonial {
    padding: 80px 0;
}

.cta-testimonial-light {
    background: #F8F9FA;
}

.cta-testimonial-primary {
    background: linear-gradient(135deg, #1A73E8 0%, #34A853 100%);
}

.cta-testimonial-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 48px;
    color: #202124;
    line-height: 1.2;
}

.cta-testimonial-primary .cta-testimonial-title {
    color: #FFFFFF;
}

.testimonial-card {
    max-width: 800px;
    margin: 0 auto 48px;
    padding: 48px;
    background: #FFFFFF;
    border-radius: 100px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    position: relative;
}

.cta-testimonial-primary .testimonial-card {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.quote-icon {
    position: absolute;
    top: -20px;
    left: 48px;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #1A73E8 0%, #34A853 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 16px rgba(26, 115, 232, 0.3);
}

.quote-icon .material-symbols-outlined {
    font-size: 2rem;
    color: #FFFFFF;
}

.testimonial-rating {
    display: flex;
    justify-content: center;
    gap: 4px;
    margin-bottom: 24px;
}

.testimonial-rating .star {
    font-size: 1.5rem;
    color: #FBBC04;
}

.testimonial-quote {
    font-size: 1.375rem;
    line-height: 1.6;
    color: #202124;
    text-align: center;
    margin: 0 0 32px 0;
    font-style: italic;
}

.cta-testimonial-primary .testimonial-quote {
    color: #FFFFFF;
}

.testimonial-author {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
}

.author-avatar,
.author-avatar-placeholder {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    object-fit: cover;
}

.author-avatar-placeholder {
    background: #E8EAED;
    display: flex;
    align-items: center;
    justify-content: center;
}

.cta-testimonial-primary .author-avatar-placeholder {
    background: rgba(255, 255, 255, 0.2);
}

.author-avatar-placeholder .material-symbols-outlined {
    font-size: 2rem;
    color: #5F6368;
}

.cta-testimonial-primary .author-avatar-placeholder .material-symbols-outlined {
    color: #FFFFFF;
}

.author-info {
    text-align: left;
}

.author-name {
    font-size: 1.125rem;
    font-weight: 700;
    color: #202124;
    margin-bottom: 4px;
}

.cta-testimonial-primary .author-name {
    color: #FFFFFF;
}

.author-role {
    font-size: 0.9375rem;
    color: #5F6368;
}

.cta-testimonial-primary .author-role {
    color: rgba(255, 255, 255, 0.85);
}

.cta-testimonial-actions {
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
}

.btn-testimonial {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 100px;
    text-decoration: none;
    transition: all 0.3s ease;
}

.btn-testimonial-primary {
    background: #1A73E8;
    color: #FFFFFF;
    box-shadow: 0 4px 12px rgba(26, 115, 232, 0.3);
}

.cta-testimonial-primary .btn-testimonial-primary {
    background: #FFFFFF;
    color: #1A73E8;
}

.btn-testimonial-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(26, 115, 232, 0.4);
}

.btn-testimonial-secondary {
    background: transparent;
    color: #1A73E8;
    border: 2px solid #1A73E8;
}

.cta-testimonial-primary .btn-testimonial-secondary {
    color: #FFFFFF;
    border-color: #FFFFFF;
}

.btn-testimonial-secondary:hover {
    background: rgba(26, 115, 232, 0.08);
}

.cta-testimonial-primary .btn-testimonial-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
}

.btn-testimonial .material-symbols-outlined {
    font-size: 1.25rem;
}

@media (max-width: 768px) {
    .cta-testimonial {
        padding: 60px 0;
    }

    .cta-testimonial-title {
        font-size: 2rem;
        margin-bottom: 32px;
    }

    .testimonial-card {
        padding: 32px 24px;
        margin-bottom: 32px;
    }

    .quote-icon {
        left: 24px;
        width: 48px;
        height: 48px;
    }

    .quote-icon .material-symbols-outlined {
        font-size: 1.5rem;
    }

    .testimonial-quote {
        font-size: 1.125rem;
    }

    .cta-testimonial-actions {
        flex-direction: column;
        width: 100%;
    }

    .btn-testimonial {
        width: 100%;
        justify-content: center;
    }
}
</style>

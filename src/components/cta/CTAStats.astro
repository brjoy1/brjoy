---
interface Stat {
  value: string;
  label: string;
  icon?: string;
}

interface Props {
  title: string;
  description: string;
  stats: Stat[];
  primaryButton: {
    text: string;
    href: string;
    icon?: string;
  };
  secondaryButton?: {
    text: string;
    href: string;
    icon?: string;
  };
  variant?: 'light' | 'primary';
  sectionId?: string;
  className?: string;
}

const {
  title,
  description,
  stats,
  primaryButton,
  secondaryButton,
  variant = 'light',
  sectionId = 'cta-stats',
  className = ''
} = Astro.props;
---

<section class={`cta-stats cta-stats-${variant} ${className}`} id={sectionId}>
    <div class="container">
        <div class="cta-stats-header">
            <h2 class="cta-stats-title">{title}</h2>
            <p class="cta-stats-description">{description}</p>
        </div>

        <div class="stats-grid">
            {stats.map(stat => (
                <div class="stat-card">
                    {stat.icon && (
                        <span class="stat-icon material-symbols-outlined">{stat.icon}</span>
                    )}
                    <div class="stat-value">{stat.value}</div>
                    <div class="stat-label">{stat.label}</div>
                </div>
            ))}
        </div>

        <div class="cta-stats-actions">
            <a href={primaryButton.href} class="btn-stats btn-stats-primary">
                {primaryButton.icon && (
                    <span class="material-symbols-outlined">{primaryButton.icon}</span>
                )}
                {primaryButton.text}
            </a>

            {secondaryButton && (
                <a href={secondaryButton.href} class="btn-stats btn-stats-secondary">
                    {secondaryButton.icon && (
                        <span class="material-symbols-outlined">{secondaryButton.icon}</span>
                    )}
                    {secondaryButton.text}
                </a>
            )}
        </div>
    </div>
</section>

<style>
.cta-stats {
    padding: 80px 0;
}

.cta-stats-light {
    background: #F8F9FA;
}

.cta-stats-primary {
    background: linear-gradient(135deg, #1A73E8 0%, #34A853 100%);
}

.cta-stats-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 48px;
}

.cta-stats-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 16px;
    color: #202124;
    line-height: 1.2;
}

.cta-stats-primary .cta-stats-title {
    color: #FFFFFF;
}

.cta-stats-description {
    font-size: 1.125rem;
    color: #5F6368;
    line-height: 1.6;
}

.cta-stats-primary .cta-stats-description {
    color: rgba(255, 255, 255, 0.9);
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 32px;
    margin-bottom: 48px;
}

.stat-card {
    text-align: center;
    padding: 32px 24px;
    background: #FFFFFF;
    border-radius: 100px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease;
}

.cta-stats-primary .stat-card {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.stat-card:hover {
    transform: translateY(-4px);
}

.stat-icon {
    font-size: 2.5rem;
    color: #1A73E8;
    margin-bottom: 16px;
    display: block;
}

.cta-stats-primary .stat-icon {
    color: #FFFFFF;
}

.stat-value {
    font-size: 3rem;
    font-weight: 700;
    color: #1A73E8;
    line-height: 1;
    margin-bottom: 8px;
}

.cta-stats-primary .stat-value {
    color: #FFFFFF;
}

.stat-label {
    font-size: 1rem;
    color: #5F6368;
    font-weight: 500;
}

.cta-stats-primary .stat-label {
    color: rgba(255, 255, 255, 0.85);
}

.cta-stats-actions {
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
}

.btn-stats {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 100px;
    text-decoration: none;
    transition: all 0.3s ease;
}

.btn-stats-primary {
    background: #1A73E8;
    color: #FFFFFF;
    box-shadow: 0 4px 12px rgba(26, 115, 232, 0.3);
}

.cta-stats-primary .btn-stats-primary {
    background: #FFFFFF;
    color: #1A73E8;
}

.btn-stats-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(26, 115, 232, 0.4);
}

.btn-stats-secondary {
    background: transparent;
    color: #1A73E8;
    border: 2px solid #1A73E8;
}

.cta-stats-primary .btn-stats-secondary {
    color: #FFFFFF;
    border-color: #FFFFFF;
}

.btn-stats-secondary:hover {
    background: rgba(26, 115, 232, 0.08);
}

.cta-stats-primary .btn-stats-secondary:hover {
    background: rgba(255, 255, 255, 0.15);
}

.btn-stats .material-symbols-outlined {
    font-size: 1.25rem;
}

@media (max-width: 768px) {
    .cta-stats {
        padding: 60px 0;
    }

    .cta-stats-title {
        font-size: 2rem;
    }

    .cta-stats-description {
        font-size: 1rem;
    }

    .stats-grid {
        grid-template-columns: 1fr;
        gap: 24px;
        margin-bottom: 32px;
    }

    .stat-value {
        font-size: 2.5rem;
    }

    .cta-stats-actions {
        flex-direction: column;
        width: 100%;
    }

    .btn-stats {
        width: 100%;
        justify-content: center;
    }
}
</style>

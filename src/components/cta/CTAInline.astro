---
interface Props {
  title: string;
  subtitle?: string;
  primaryButton: {
    text: string;
    href: string;
    icon?: string;
  };
  secondaryButton?: {
    text: string;
    href: string;
    icon?: string;
  };
  variant?: 'default' | 'urgent' | 'success';
  backgroundColor?: 'white' | 'gray' | 'gradient';
}

const {
  title,
  subtitle,
  primaryButton,
  secondaryButton,
  variant = 'default',
  backgroundColor = 'white'
} = Astro.props;

const bgClass = {
  white: '',
  gray: 'bg-gray',
  gradient: 'bg-gradient'
}[backgroundColor];

const variantClass = `cta-inline--${variant}`;
---

<section class={`cta-inline ${bgClass} ${variantClass}`}>
  <div class="container">
    <div class="cta-inline__wrapper">
      <div class="cta-inline__content">
        <div class="cta-inline__text">
          <h2 class="cta-inline__title">{title}</h2>
          {subtitle && <p class="cta-inline__subtitle">{subtitle}</p>}
        </div>

        <div class="cta-inline__actions">
          <a href={primaryButton.href} class="cta-btn cta-btn--primary" target="_blank" rel="noopener noreferrer">
            {primaryButton.icon && <span class="material-symbols-outlined">{primaryButton.icon}</span>}
            <span class="cta-btn__text">{primaryButton.text}</span>
            <span class="cta-btn__arrow material-symbols-outlined">arrow_forward</span>
          </a>
          {secondaryButton && (
            <a href={secondaryButton.href} class="cta-btn cta-btn--secondary">
              {secondaryButton.icon && <span class="material-symbols-outlined">{secondaryButton.icon}</span>}
              <span class="cta-btn__text">{secondaryButton.text}</span>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.cta-inline {
  padding: var(--section-padding-large) 0;
}

.cta-inline.bg-gray {
  background: var(--color-bg-alt);
}

.cta-inline.bg-gradient {
  background: linear-gradient(135deg, #E3F2FD 0%, #F0F4FF 100%);
}

.cta-inline .container {
  max-width: 1100px;
}

.cta-inline__wrapper {
  position: relative;
}

.cta-inline__content {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 48px;
  padding: 42px 48px;
  background: #FFFFFF;
  border-radius: 20px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
  border: 1px solid rgba(0, 0, 0, 0.06);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.cta-inline__content:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
  border-color: rgba(26, 115, 232, 0.2);
}

.cta-inline--urgent .cta-inline__content {
  border-color: rgba(234, 67, 53, 0.15);
}

.cta-inline--urgent .cta-inline__content:hover {
  border-color: rgba(234, 67, 53, 0.3);
}

.cta-inline--success .cta-inline__content {
  border-color: rgba(52, 168, 83, 0.15);
}

.cta-inline--success .cta-inline__content:hover {
  border-color: rgba(52, 168, 83, 0.3);
}

.cta-inline__text {
  flex: 1;
}

.cta-inline__title {
  font-size: 1.75rem;
  font-weight: 800;
  color: var(--color-text);
  margin: 0 0 8px 0;
  line-height: 1.2;
}

.cta-inline__subtitle {
  font-size: 1rem;
  color: var(--color-text-secondary);
  margin: 0;
  line-height: 1.5;
  font-weight: 500;
}

.cta-inline__actions {
  display: flex;
  gap: 12px;
  flex-shrink: 0;
}

/* New CTA Buttons */
.cta-btn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 14px 28px;
  border-radius: 12px;
  font-size: 0.95rem;
  font-weight: 700;
  text-decoration: none;
  white-space: nowrap;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.cta-btn .material-symbols-outlined {
  font-size: 20px;
}

.cta-btn__arrow {
  transition: transform 0.3s ease;
}

.cta-btn--primary {
  background: linear-gradient(135deg, #1A73E8 0%, #4285F4 100%);
  color: white;
  box-shadow: 0 4px 16px rgba(26, 115, 232, 0.3);
}

.cta-btn--primary:hover {
  box-shadow: 0 6px 24px rgba(26, 115, 232, 0.4);
  transform: translateY(-2px);
}

.cta-btn--primary:hover .cta-btn__arrow {
  transform: translateX(4px);
}

.cta-btn--primary:active {
  transform: translateY(0);
}

.cta-btn--secondary {
  background: transparent;
  color: var(--color-primary);
  border: 2px solid var(--color-primary);
}

.cta-btn--secondary:hover {
  background: var(--color-primary);
  color: white;
  transform: translateY(-2px);
}

@media (max-width: 968px) {
  .cta-inline__content {
    flex-direction: column;
    text-align: center;
    padding: 38px 32px;
    gap: 28px;
  }

  .cta-inline__actions {
    width: 100%;
    flex-direction: column;
  }

  .cta-btn {
    width: 100%;
    justify-content: center;
  }
}

@media (max-width: 576px) {
  .cta-inline {
    padding: 0 0 var(--section-padding-large) 0;
  }

  .cta-inline__content {
    padding: 30px 20px;
    gap: 24px;
    border-radius: 16px;
  }

  .cta-inline__title {
    font-size: 1.375rem;
    line-height: 1.3;
    margin-bottom: 10px;
  }

  .cta-inline__subtitle {
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  .cta-inline__actions {
    gap: 10px;
  }

  .cta-btn {
    padding: 14px 20px;
    font-size: 0.875rem;
    border-radius: 10px;
  }

  .cta-btn .material-symbols-outlined {
    font-size: 18px;
  }

  .cta-btn__arrow {
    font-size: 18px;
  }
}
</style>

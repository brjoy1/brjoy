---
interface Props {
  title: string;
  description: string;
  features?: string[];
  primaryButton: {
    text: string;
    href: string;
    icon?: string;
  };
  secondaryButton?: {
    text: string;
    href: string;
    icon?: string;
  };
  illustration?: string;
  variant?: 'primary' | 'green' | 'dark';
  imagePosition?: 'left' | 'right';
  sectionId?: string;
  className?: string;
}

const {
  title,
  description,
  features = [],
  primaryButton,
  secondaryButton,
  illustration = 'smartphone',
  variant = 'primary',
  imagePosition = 'right',
  sectionId = 'cta-split',
  className = ''
} = Astro.props;
---

<section class={`cta-split cta-split-${variant} ${className}`} id={sectionId}>
    <div class="container">
        <div class={`cta-split-grid ${imagePosition === 'left' ? 'reverse' : ''}`}>
            <div class="cta-split-content">
                <h2 class="cta-split-title">{title}</h2>
                <p class="cta-split-description">{description}</p>

                {features.length > 0 && (
                    <ul class="cta-split-features">
                        {features.map(feature => (
                            <li>
                                <span class="material-symbols-outlined">check_circle</span>
                                {feature}
                            </li>
                        ))}
                    </ul>
                )}

                <div class="cta-split-actions">
                    <a href={primaryButton.href} class="btn-split btn-split-primary">
                        {primaryButton.icon && (
                            <span class="material-symbols-outlined">{primaryButton.icon}</span>
                        )}
                        {primaryButton.text}
                    </a>

                    {secondaryButton && (
                        <a href={secondaryButton.href} class="btn-split btn-split-secondary">
                            {secondaryButton.icon && (
                                <span class="material-symbols-outlined">{secondaryButton.icon}</span>
                            )}
                            {secondaryButton.text}
                        </a>
                    )}
                </div>
            </div>

            <div class="cta-split-visual">
                <div class="visual-container">
                    <div class="visual-circle pulse"></div>
                    <div class="visual-icon">
                        <span class="material-symbols-outlined">{illustration}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.cta-split {
    padding: 80px 0;
    position: relative;
}

.cta-split-primary {
    background: linear-gradient(135deg, #F8F9FA 0%, #FFFFFF 100%);
}

.cta-split-green {
    background: linear-gradient(135deg, #E8F5E9 0%, #F1F8E9 100%);
}

.cta-split-dark {
    background: linear-gradient(135deg, #1F2937 0%, #111827 100%);
}

.cta-split-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 64px;
    align-items: center;
}

.cta-split-grid.reverse {
    direction: rtl;
}

.cta-split-grid.reverse > * {
    direction: ltr;
}

.cta-split-content {
    max-width: 540px;
}

.cta-split-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 16px;
    line-height: 1.2;
    color: #202124;
}

.cta-split-dark .cta-split-title {
    color: #FFFFFF;
}

.cta-split-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: #5F6368;
    margin-bottom: 24px;
}

.cta-split-dark .cta-split-description {
    color: rgba(255, 255, 255, 0.85);
}

.cta-split-features {
    list-style: none;
    padding: 0;
    margin: 0 0 32px 0;
}

.cta-split-features li {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 0;
    font-size: 1rem;
    color: #202124;
}

.cta-split-dark .cta-split-features li {
    color: #FFFFFF;
}

.cta-split-features .material-symbols-outlined {
    font-size: 1.5rem;
    color: #34A853;
    flex-shrink: 0;
}

.cta-split-actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
}

.btn-split {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 100px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
}

.btn-split-primary {
    background: #1A73E8;
    color: #FFFFFF;
    box-shadow: 0 2px 8px rgba(26, 115, 232, 0.3);
}

.btn-split-primary:hover {
    background: #1557B0;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(26, 115, 232, 0.4);
}

.btn-split-secondary {
    background: transparent;
    color: #1A73E8;
    border: 2px solid #1A73E8;
}

.cta-split-dark .btn-split-secondary {
    color: #FFFFFF;
    border-color: #FFFFFF;
}

.btn-split-secondary:hover {
    background: rgba(26, 115, 232, 0.08);
}

.cta-split-dark .btn-split-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
}

.btn-split .material-symbols-outlined {
    font-size: 1.25rem;
}

/* Visual side */
.cta-split-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.visual-container {
    position: relative;
    width: 300px;
    height: 300px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.visual-circle {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(26, 115, 232, 0.1) 0%, rgba(52, 168, 83, 0.1) 100%);
    border: 2px solid rgba(26, 115, 232, 0.2);
}

.visual-circle.pulse {
    animation: pulse 3s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% {
        transform: scale(1);
        opacity: 1;
    }
    50% {
        transform: scale(1.05);
        opacity: 0.8;
    }
}

.visual-icon {
    position: relative;
    z-index: 1;
    width: 200px;
    height: 200px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(135deg, #1A73E8 0%, #34A853 100%);
    border-radius: 50%;
    box-shadow: 0 20px 60px rgba(26, 115, 232, 0.3);
}

.visual-icon .material-symbols-outlined {
    font-size: 6rem;
    color: #FFFFFF;
}

/* Responsividade */
@media (max-width: 992px) {
    .cta-split {
        padding: 60px 0;
    }

    .cta-split-grid {
        grid-template-columns: 1fr;
        gap: 48px;
    }

    .cta-split-grid.reverse {
        direction: ltr;
    }

    .cta-split-content {
        max-width: 100%;
        text-align: center;
    }

    .cta-split-title {
        font-size: 2rem;
    }

    .cta-split-features {
        text-align: left;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    .cta-split-actions {
        justify-content: center;
    }

    .visual-container {
        width: 250px;
        height: 250px;
    }

    .visual-icon {
        width: 160px;
        height: 160px;
    }

    .visual-icon .material-symbols-outlined {
        font-size: 5rem;
    }
}

@media (max-width: 576px) {
    .cta-split {
        padding: 48px 0;
    }

    .cta-split-title {
        font-size: 1.75rem;
    }

    .cta-split-description {
        font-size: 1rem;
    }

    .cta-split-features li {
        font-size: 0.9375rem;
    }

    .cta-split-actions {
        flex-direction: column;
        width: 100%;
    }

    .btn-split {
        width: 100%;
        justify-content: center;
        padding: 14px 28px;
    }

    .visual-container {
        width: 200px;
        height: 200px;
    }

    .visual-icon {
        width: 130px;
        height: 130px;
    }

    .visual-icon .material-symbols-outlined {
        font-size: 4rem;
    }
}
</style>

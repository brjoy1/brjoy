---
import Layout from '../../layouts/Layout.astro';
import PopHero from '../../components/PopHero.astro';
import FeatureGrid from '../../components/features-grid/FeatureGrid.astro';
import StepsGrid from '../../components/features-grid/StepsGrid.astro';
import CTATestimonialSlider from '../../components/cta/CTATestimonialSlider.astro';
import CTAInline from '../../components/cta/CTAInline.astro';
import IntegrationsSection from '../../components/IntegrationsSection.astro';
// import VideoSection from '../../components/VideoSection.astro'; // Temporariamente desabilitado
import FAQSection from '../../components/FAQSection.astro';

// Features data
const problemasFeatures = [
    {
        icon: 'forum',
        title: 'WhatsApp lotado',
        description: 'Mensagens sem resposta acumulando enquanto leads esfriam a cada minuto.'
    },
    {
        icon: 'ac_unit',
        title: 'Leads esfriando',
        description: 'Demora de 2h para responder? O lead já fechou com seu concorrente agora.'
    },
    {
        icon: 'error_outline',
        title: 'CRM desorganizado',
        description: 'Informações perdidas na bagunça e ninguém sabe quem atender primeiro.'
    },
    {
        icon: 'timer',
        title: 'Tempo desperdiçado',
        description: 'Sua equipe perde 4 horas por dia só respondendo leads não qualificados.'
    },
    {
        icon: 'event_busy',
        title: 'Visitas que não acontecem',
        description: 'Agendamentos marcados com tanto esforço que viram no-show ou cancelamento.'
    },

    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 8px;
}

.result-description {
    display: block;
    color: var(--color-text-secondary);
    font-size: 0.9rem;
}

/* FAQ */
.faq-container {
    max-width: 800px;
    margin: 48px auto 0;
}

.faq-item {
    margin-bottom: 16px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    overflow: hidden;
}

.faq-question {
    width: 100%;
    padding: 20px 24px;
    background: #FFFFFF;
    border: none;
    text-align: left;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background 0.3s ease;
}

.faq-question:hover {
    background: #F8F9FA;
}

.faq-question .material-symbols-outlined {
    transition: transform 0.3s ease;
}

.faq-item.active .faq-question .material-symbols-outlined {
    transform: rotate(180deg);
}

.faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    background: #F8F9FA;
}

.faq-answer p {
    padding: 20px 24px;
    margin: 0;
    line-height: 1.6;
    color: var(--color-text-secondary);
}

/* Floating WhatsApp Button Fixes */
.floating-whatsapp {
    position: fixed;
    bottom: 24px;
    right: 24px;
    width: 56px;
    height: 56px;
    background: #25D366;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 16px rgba(37, 211, 102, 0.4);
    z-index: 1000;
    transition: all 0.3s ease;
}

.floating-whatsapp:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 24px rgba(37, 211, 102, 0.6);
}

@media (max-width: 768px) {
    .floating-whatsapp {
        width: 48px;
        height: 48px;
        bottom: 16px;
        right: 16px;
    }

    .floating-whatsapp:hover {
        transform: scale(1);
    }

    .floating-whatsapp svg {
        width: 20px;
        height: 20px;
    }
}

/* Slider Indicators (Dots) Fixes */
.slider-indicators {
    display: none;
}

@media (max-width: 768px) {
    .slider-indicators {
        display: flex;
        justify-content: center;
        gap: 8px;
        margin-top: 20px;
    }

    .slider-indicators .slider-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: rgba(26, 115, 232, 0.3);
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        padding: 0;
    }

    .slider-indicators .slider-dot.active {
        background: #1A73E8;
        width: 24px;
        border-radius: 4px;
    }
}

</style>
